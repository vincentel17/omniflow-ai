
# ==============================
# OmniFlow AI Environment Config
# ==============================

# ---- GENERAL ----
NODE_ENV=development
PYTHON_ENV=development
APP_NAME=omniflow-ai

# ---- WEB (Next.js) ----
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_replace

# ---- AUTH ----
CLERK_SECRET_KEY=sk_test_replace
CLERK_JWT_KEY=

# ---- API (FastAPI) ----
API_HOST=0.0.0.0
API_PORT=8000
FASTAPI_ENV=development
SECRET_KEY_BASE=
ACCESS_TOKEN_EXPIRE_MINUTES=60
DEV_AUTH_BYPASS=false
DEV_USER_ID=11111111-1111-1111-1111-111111111111
DEV_ORG_ID=22222222-2222-2222-2222-222222222222
