# ==============================
# OmniFlow AI - Docker Local Env
# ==============================

NODE_ENV=development
PYTHON_ENV=development
APP_NAME=omniflow-ai
LOG_LEVEL=info

# Web
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# API
API_HOST=0.0.0.0
API_PORT=8000
FASTAPI_ENV=development
SECRET_KEY_BASE=dev-change-me
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Auth (choose one provider later; keep placeholders)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_JWT_KEY=

# Postgres
POSTGRES_DB=omniflow
POSTGRES_USER=omniflow_user
POSTGRES_PASSWORD=change-me
POSTGRES_PORT_HOST=5432

# Redis
REDIS_PORT_HOST=6379
REDIS_DB=0

# Vector (align with your embedding model)
VECTOR_DIMENSION=1536

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# OAuth redirect
OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Social / integrations
META_APP_ID=
META_APP_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OpenAI
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com
OPENAI_API_VERSION=v1

# Observability
SENTRY_DSN=

# Feature flags
FEATURE_ADS_AUTOMATION=false
FEATURE_REAL_ESTATE_PACK=true
FEATURE_HOME_CARE_PACK=false

# Host ports
WEB_PORT_HOST=3000
API_PORT_HOST=8000